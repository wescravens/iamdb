.container(ng-init='fetchGames()')
  .row
    .col-lg-12
      h1.page-header Active Games:
      ul.nav.nav-tabs.nav-stacked(ng-repeat='game in games')
        li
          div.game-item
            b {{game.name}}
            span.game-item__action.button-group(dropdown='', on-toggle='toggled(open)')
              button.btn.btn-primary.dropdown-toggle(type='button', dropdown-toggle='')
                | Action &nbsp;
                span.caret
              ul.dropdown-menu
                li
                  a(ng-click='joinGame(game); $event.stopPropagation();') Join
                li
                  a(ui-sref='play({gameName: game.name})') View
                li.divider
                li(ng-show='!isPlayer(currentUser, game)')
                  a(ui-sref='play({gameName: game.name})') Leave


  form.thing-form
    label Syncs in realtime across clients
    p.input-group
      input.form-control(type='text', placeholder='Add a new game here.', ng-model='gameName')
      span.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='createGame()') Add New

