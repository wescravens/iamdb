.game-chat__display.row
  .game-chat__form-wrapper.col-md-4
    form.chat-form(name='chatForm')
      label.hidden Chat
      p
        input.form-control(type='text', placeholder='Chat', ng-model='gameChatInput', name='game_chat_input')
        button.btn.btn-primary(type='submit', ng-click='sendChat()') Send

  .col-md-8
    .chat-display.well
      .chat-item(ng-repeat='chat in game.log')
        b [{{chat.user.name}}]: &nbsp;
        span {{chat.message}}
